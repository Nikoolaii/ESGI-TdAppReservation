{% extends 'base.html.twig' %}

{% block title %}{{ service.title }}{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="bg-white shadow-md rounded-lg overflow-hidden">
        <div class="p-4">
            <a href="{{ url('app_service_index') }}" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Back to list</a>
            <br/>
            <h2 class="text-xl font-bold mb-2">{{ service.title }}</h2>
            <p class="text-gray-700 mb-4">{{ service.description }}</p>
            <p class="text-gray-600"><strong>City:</strong> {{ service.city }}</p>
            <p class="text-gray-600"><strong>Address:</strong> {{ service.adress }}</p>
            <p class="text-gray-600"><strong>Postcode:</strong> {{ service.postcode }}</p>
            <p class="text-gray-600"><strong>Duration:</strong> {{ service.duration }} minutes</p>
            <p class="text-gray-600"><strong>Categories:</strong>
                {% for category in service.category %}
                    {{ category.name }}{% if not loop.last %}, {% endif %}
                {% endfor %}
            </p>
        </div>

        <div class="bg-white shadow-md rounded-lg overflow-hidden mt-4 p-4">
            {% if form_errors(form) %}
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                    <strong class="font-bold">Error!</strong>
                    <span class="block sm:inline">{{ form_errors(form) }}</span>
                </div>
            {% endif %}
            <h2 class="text-xl font-bold mb-2">Book this service</h2>
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <br/>
            <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Book Now</button>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}