{% extends 'base.html.twig' %}

{% block title %}Services{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for service in services %}
            <div class="bg-white shadow-md rounded-lg overflow-hidden flex flex-col h-full">
                <div class="p-4 flex-grow">
                    <h2 class="text-xl font-bold mb-2">{{ service.title }}</h2>
                    <p class="text-gray-700 mb-4">{{ service.description }}</p>
                    <p class="text-gray-600"><strong>City:</strong> {{ service.city }}</p>
                    <p class="text-gray-600"><strong>Address:</strong> {{ service.adress }}</p>
                    <p class="text-gray-600"><strong>Postcode:</strong> {{ service.postcode }}</p>
                    <p class="text-gray-600"><strong>Duration:</strong> {{ service.duration }} minutes</p>
                    <p class="text-gray-600"><strong>Categories:</strong>
                        {% for category in service.category %}
                            {{ category.name }}{% if not loop.last %}, {% endif %}
                        {% endfor %}
                    </p>
                </div>
                <div class="p-4">
                    <a href="{{ url('app_service_show', {'id': service.id}) }}" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 mt-4">See more</a>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}