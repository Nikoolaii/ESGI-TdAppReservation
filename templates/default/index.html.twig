{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<div>
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold mb-4">Start now by create a new service</h1>
        <a href="{{ url('app_service_new') }}" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 mb-4">Create a new service</a>
        <h1 class="text-3xl font-bold mb-4">My Bookings</h1>
        <div class="bg-white shadow-md rounded-lg overflow-hidden">
            {% if bookings is empty %}
                <p class="text-gray-700 p-4">You have no bookings.</p>
            {% else %}
                <table class="min-w-full bg-white">
                    <thead>
                        <tr>
                            <th class="py-2 px-4 border-b">Service</th>
                            <th class="py-2 px-4 border-b">Start Time</th>
                            <th class="py-2 px-4 border-b">End Time</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for booking in bookings %}
                            <tr>
                                <td class="py-2 px-4 border-b">{{ booking.service.title }}</td>
                                <td class="py-2 px-4 border-b">{{ booking.dateStart|date('Y-m-d H:i') }}</td>
                                <td class="py-2 px-4 border-b">{{ booking.dateEnd|date('Y-m-d H:i') }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
